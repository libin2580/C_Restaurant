<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    tools:context="canali.meridian.cybraum.restaurant.TableSelection"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_weight=".2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|left"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="@dimen/_13sdp"
                    android:text="Menu"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".9">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_17sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:background="@drawable/search"
                                        android:layout_gravity="center|left"
                                        />

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@null"
                                        android:hint="Search"
                                        android:id="@+id/edt_search"
                                        android:textColor="#ffffff"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:textColorHint="#ffffff"
                                        />

                        </LinearLayout>


                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#abc7c7c7"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center|left"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/linear_cart">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:background="@drawable/cart_background"
                            android:layout_centerHorizontal="true"
                         android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/_5sdp"
                                android:textColor="#ffffff"
                                android:id="@+id/txt_cart_number"
                                android:layout_centerHorizontal="true"
                                />
                        </LinearLayout>


                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_21sdp"

                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/cart"/>
                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top|left"
            android:orientation="vertical"
            android:layout_weight=".8">










            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="#ffffff"
                android:orientation="horizontal">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu_spinner"
        android:visibility="invisible">

    </Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_spinner_layout">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soupe"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/txt_spinnert_content"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:background="#70000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/arrow"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
            </LinearLayout>








            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="#ffffff"
                android:id="@+id/linear_category_container"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/category_spinner"
                        android:visibility="invisible">

                    </Spinner>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linear_category_layout">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/_5sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Category"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:id="@+id/txt_category_content"
                                android:textSize="@dimen/_8sdp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            >
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_height="match_parent"
                                android:background="#70000000"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".15"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:background="@drawable/arrow"/>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
















           <LinearLayout
               android:layout_width="@dimen/_150sdp"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"

               android:orientation="horizontal">
               <android.support.v7.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/menu_items_recyclerview">

               </android.support.v7.widget.RecyclerView>

           </LinearLayout>
            
            
        </LinearLayout>































    </LinearLayout>
    <ProgressBar
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>
</RelativeLayout>
